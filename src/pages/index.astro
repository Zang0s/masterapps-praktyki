---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Graphics from '../components/Graphics.astro';
---

<Layout title="Welcome to snap!">
	<div id="overlay" class="fixed inset-0 bg-black opacity-50 z-30 hidden"></div>
	<Navbar />
	<div class="items-center flex flex-col lg:flex-row lg:space-x-8 lg:h-3/4 relative">
		<div class="lg:basis-1/12 lg:order-1 invisible lg:visible"></div>
		<Hero />
		<div class="lg:basis-1/12 invisible lg:order-3 lg:visible"></div>
		<Graphics />
		<div class="lg:basis-1/12 invisible lg:order-5 lg:visible"></div>
	</div>
</Layout>

