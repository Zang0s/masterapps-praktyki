---
import '@fontsource-variable/epilogue';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="../../public/favicon-32x32.png" />
		<link rel="stylesheet" href="https://fonts.google.com/specimen/Epilogue">
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-[#151515]">
		<slot />
	</body>
</html>

<style>
	body {
		font-family: 'Epilogue Variable', sans-serif;
	}
</style>